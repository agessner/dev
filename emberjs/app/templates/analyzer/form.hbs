<form>
    <div class="panel panel-default">
        <div class="panel-heading"><h3 class="panel-title">Dados do candidato</h3></div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Nome: </label><br>
                        {{input value=model.userName required=true aria-describedby="basic-addon1"}}
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label>Email: </label><br>
                        {{input value=model.userEmail placeholder="example@example.com"}}
                    </div>
                </div>
            </div>
        </div>
    </div>
    <div class="panel panel-default">
        <div class="panel-heading"><h3 class="panel-title">Habilidades</h3></div>
        <div class="panel-body">
            <div class="row">
                <div class="col-md-12">
                    {{#each abilities as |ability|}}
                        <div class="row">
                            <div class="hability-title">
                                {{ability.name}}
                            </div>
                            {{#each ability.rate as |ratio|}}
                                <div class="col-md-1">
                                    {{#radio-button
                                        value=ratio
                                        groupValue=ability.value
                                        changed="habilityChanged"}}
                                        {{ratio}}
                                    {{/radio-button}}
                                </div>
                            {{/each}}
                        </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </div>
    <button {{action "save"}} type="button" class="btn btn-default" aria-label="Left Align">
        <span class="glyphicon glyphicon-send" aria-hidden="true"></span> Enviar
    </button>
</form>